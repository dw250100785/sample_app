source 'https://rubygems.org'

gem 'rails'
gem 'jquery-rails', '2.2.1'
gem 'bootstrap-sass'
gem 'bcrypt-ruby'
gem 'faker'
gem 'will_paginate'
gem 'bootstrap-will_paginate'

group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'guard-rspec'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :test do
  gem 'capybara'
  gem 'factory_girl_rails'
  gem 'cucumber-rails'
  gem 'database_cleaner'
  gem 'rb-fsevent', '0.9.3'
  gem 'growl'
  gem 'guard-spork'
  gem 'spork'
  gem 'launchy'
end

group :production do
  gem 'pg'
end
